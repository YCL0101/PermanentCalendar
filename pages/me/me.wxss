  background-color: rgba(253, 60, 60, 0.863);
  align-items: center;
}

.TouX {
  display: flex;
  margin: auto;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.NiC {
  width: 100%;
  text-align: center;
  margin-top: 10px;
}

.end {
  display: flex;
  width: 100%;
  margin-top: 10px;
}

.endT {
  margin-top: 30px;
  display: flex;
  width: 100%;
  height: 20px;
  padding: 0px;
  text-align: left;
  position: relative;
}

.end_Img {
  width: 20px;
  height: 20px;
  display: block;
  box-sizing: border-box;
  margin-left: 5px;
  margin-right: 5px;
}

.end_B {
  all: initial;
  width: 100%;          
  height: 20px;
  /* 修改所有元素属性或父元素的值为其初始化值 */
  /* background-color: lawngreen; */
  border: none;
  position: absolute;
  z-index: 1;
}
.scImg{
  height: 400px; 
  width: 250px;
  /* margin-bottom: 50%; */
  position: absolute; 
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);
  z-index: 8;
}
.mask{
  background-color:rgba(0, 0, 0, 0.288);
  position:absolute;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 2;
}
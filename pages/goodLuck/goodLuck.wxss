page{
  background-color: rgb(245, 243, 243);
  font-family:‘Segoe UI’, Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 549;
  padding: 15px 0;
}
.content{
  background-color:rgb(252, 253, 239) ;
  margin: 0 15px;
  border-radius: 15px;
}
.rifen{
  display: flex;
  position: relative;
}
.fenxiang{
 position: absolute;
 right: 2px;
 top:2px;
}
/* button自带样式清除 */
.fenxiang button::after {
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
}
.fenxiang button {
  background-color: transparent !important;
  padding: 0 !important;
  line-height: inherit !important;
  margin: 0 !important;
  width: auto !important;
  font-weight: 500 !important;
  border-radius: none !important;
}
.fenxiang-icon{
  width: 23px;
  height: 23px;
  margin-top:3px;
  margin-right: 3px;
}
.riqi{
  padding: 20rpx 0;
  margin: 0 auto;
}
.picker{
  display: flex;
  align-items: center;
}
.picker-icon{
  margin-left: 8px;
  width: 13px;
  height: 13px;
  margin-top: 2px;
}
.yinli{
  text-align: center;
}
.yinliri{
  font-size: 70rpx;
  padding-bottom: 10rpx;
  color: rgb(182, 11, 11);
  margin: 0 30px;
}
.yinli-riqi{
  display: flex;
  align-items: center;
  justify-content: center;
}
.riqi-jian-icon,.riqi-jia-icon{
  width: 20px;
  height: 20px;
}
.yiji{
  border: solid;
  margin: 10px 10px;
  border-radius: 8px;
  border-color: rgb(235, 232, 205);
}
.yi{
  display: flex;
  border-bottom: solid;
  align-items: center; 
  border-color: rgb(235, 232, 205);
}
.ji{
  display: flex;
  align-items: center; 
}
.yi-icon{
  background-color: rgb(127, 253, 253);
}
.ji-icon{
  background-color: rgb(250, 140, 107);
}
.yi-icon,.ji-icon{
    width: 24px;
    height: 24px;
    border-radius: 12px;
    line-height: 24px;
    text-align: center;
    margin: auto 30rpx;
}
.tr-zhushen{
  text-align: center;
  border-bottom:solid;
  border-color: rgb(235, 232, 205);
}
.tr-zhushen-content{
  padding: 10rpx 10rpx;
}
.tr-taichong{
  display: flex;
  text-align: center;
}
.tr-taishen{
border-right:solid ;
border-color: rgb(235, 232, 205);
}
.tr-wuxiu{
  display: flex;
  text-align: center;
  border-top: solid;
  border-color: rgb(235, 232, 205);
}
.tr-wuxing{
  border-right: solid;
  border-color: rgb(235, 232, 205);
}
.tr-jisheng{
  display: flex;
  text-align: center;
  border-top: solid;
  border-color: rgb(235, 232, 205);
}
.tr-jijie{
  border-right: solid;
  border-color: rgb(235, 232, 205);
}
.tr-peng{
  text-align: center;
  border-top: solid;
  border-color: rgb(235, 232, 205);
}
.tr-zhushen-tag,.tr-taishen-tag,.tr-chongsha-tag,.tr-wuxing-tag,.tr-xingxiu-tag,.tr-jijie-tag,.tr-shengxiao-tag,.tr-peng-tag{
  color: rgb(182, 11, 11);
}
.table{
  border: solid;
  margin: 0 10px;
  position: relative; 
  left: 0rpx; 
  top: -24rpx;
  margin-top: 20px;
  border-radius: 10px;
  border-color: rgb(235, 232, 205);
}
.tr-taishen,.tr-chongsha,.tr-wuxing,.tr-xingxiu,.tr-jijie,.tr-shengxiao{
  padding: 10rpx 50rpx;
  flex:1;
}
.tr-zhushen,.tr-taishen,.tr-chongsha,.tr-wuxing,.tr-xingxiu,.tr-jijie,.tr-shengxiao,.tr-peng{
  display: flex;
  flex-direction: column; /*垂直显示*/
  align-items: center;    /*垂直居中*/
  justify-content: center;/*水平居中*/
  padding: 15px 0;
}

